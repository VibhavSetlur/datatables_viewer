# KBase Table Renderer Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# AUTHENTICATION
# =============================================================================
# KBase Service Authentication Token
# Get your token from: https://kbase.us/#auth2/account
KB_SERVICE_AUTH_TOKEN=your_kbase_token_here

# =============================================================================
# API CONFIGURATION
# =============================================================================
# TableScanner API endpoints
# Development: https://appdev.kbase.us/services/berdl_table_scanner
# Production:  https://kbase.us/services/berdl_table_scanner

# Default API endpoint (appdev for development)
TABLESCANNER_API_URL=https://appdev.kbase.us/services/berdl_table_scanner

# KBase environment (appdev or prod)
KB_ENV=appdev

# =============================================================================
# UI SETTINGS
# =============================================================================
# Default theme (dark or light)
DEFAULT_THEME=dark

# Default page size for table pagination
DEFAULT_PAGE_SIZE=100
