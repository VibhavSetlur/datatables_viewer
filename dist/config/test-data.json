{
    "id": "test_data",
    "name": "Local Test Data",
    "version": "2.0.0",
    "description": "Local SQLite database containing E. coli test data",
    "icon": "bi-database",
    "color": "#6f42c1",
    "defaults": {
        "pageSize": 25,
        "density": "normal",
        "showRowNumbers": true,
        "enableSelection": true
    },
    "sharedCategories": [
        {
            "id": "core",
            "name": "Core Identifiers",
            "description": "Essential IDs and names",
            "icon": "bi-key-fill",
            "color": "#6366f1",
            "defaultVisible": true,
            "order": 1
        },
        {
            "id": "functional",
            "name": "Functional Annotation",
            "description": "Gene function and product descriptions",
            "icon": "bi-gear-fill",
            "color": "#22c55e",
            "defaultVisible": true,
            "order": 2
        },
        {
            "id": "location",
            "name": "Genomic Location",
            "description": "Chromosomal coordinates and strand",
            "icon": "bi-geo-alt-fill",
            "color": "#f59e0b",
            "defaultVisible": false,
            "order": 3
        },
        {
            "id": "sequence",
            "name": "Sequence Data",
            "description": "Nucleotide and protein sequences",
            "icon": "bi-body-text",
            "color": "#06b6d4",
            "defaultVisible": false,
            "order": 4
        }
    ],
    "tables": {
        "genome_features": {
            "displayName": "Genome Features",
            "description": "Genomic features from the test database",
            "icon": "bi-dna",
            "settings": {
                "defaultSortColumn": "feature_id",
                "defaultSortOrder": "asc"
            },
            "columns": [
                {
                    "column": "id",
                    "displayName": "ID",
                    "description": "Internal database identifier",
                    "dataType": "integer",
                    "visible": false,
                    "categories": [
                        "core"
                    ]
                },
                {
                    "column": "feature_id",
                    "displayName": "Feature ID",
                    "description": "Unique identifier for the genomic feature (e.g., Gene ID)",
                    "dataType": "id",
                    "copyable": true,
                    "sortable": true,
                    "filterable": true,
                    "width": "150px",
                    "pin": "left",
                    "categories": [
                        "core"
                    ]
                },
                {
                    "column": "genome_id",
                    "displayName": "Genome ID",
                    "description": "Reference ID of the source genome",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "width": "120px",
                    "categories": [
                        "core"
                    ]
                },
                {
                    "column": "contig_id",
                    "displayName": "Contig",
                    "description": "Contig identifier where this feature is located",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "width": "120px",
                    "categories": [
                        "location"
                    ]
                },
                {
                    "column": "bakta_function",
                    "displayName": "Function (Bakta)",
                    "description": "Functional annotation provided by Bakta pipeline",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "searchable": true,
                    "width": "300px",
                    "categories": [
                        "functional"
                    ]
                },
                {
                    "column": "rast_function",
                    "displayName": "Function (RAST)",
                    "description": "Functional annotation provided by RAST pipeline",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "searchable": true,
                    "width": "300px",
                    "visible": false,
                    "categories": [
                        "functional"
                    ]
                },
                {
                    "column": "GO_Terms",
                    "displayName": "GO Terms",
                    "dataType": "ontology",
                    "width": "200px",
                    "categories": [
                        "functional"
                    ],
                    "transform": {
                        "type": "ontology",
                        "options": {
                            "delimiter": ";",
                            "ontologyType": "custom",
                            "lookupTable": "Ontology_Dictionary",
                            "lookupKey": "Term_ID",
                            "lookupValue": "Term_Name",
                            "urlTemplate": "https://amigo.geneontology.org/amigo/term/{value}",
                            "style": "badge"
                        }
                    }
                },
                {
                    "column": "gene_names",
                    "displayName": "Gene",
                    "description": "Common gene name or symbol",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "width": "100px",
                    "categories": [
                        "core"
                    ],
                    "transform": {
                        "type": "badge",
                        "options": {
                            "color": "#3b82f6",
                            "bgColor": "#dbeafe"
                        }
                    }
                },
                {
                    "column": "length",
                    "displayName": "Length (bp)",
                    "description": "Length of the feature in base pairs",
                    "dataType": "integer",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "categories": [
                        "location"
                    ],
                    "transform": {
                        "type": "number",
                        "options": {
                            "locale": "en-US"
                        }
                    }
                },
                {
                    "column": "start",
                    "displayName": "Start",
                    "description": "Start position on the contig (1-based)",
                    "dataType": "integer",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "visible": false,
                    "categories": [
                        "location"
                    ],
                    "transform": {
                        "type": "number",
                        "options": {
                            "locale": "en-US"
                        }
                    }
                },
                {
                    "column": "end",
                    "displayName": "End",
                    "description": "End position on the contig",
                    "dataType": "integer",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "visible": false,
                    "categories": [
                        "location"
                    ],
                    "transform": {
                        "type": "number",
                        "options": {
                            "locale": "en-US"
                        }
                    }
                },
                {
                    "column": "strand",
                    "displayName": "Strand",
                    "description": "DNA strand orientation (+ or -)",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "align": "center",
                    "width": "80px",
                    "visible": false,
                    "categories": [
                        "location"
                    ]
                },
                {
                    "column": "sequence_dna",
                    "displayName": "DNA Sequence",
                    "description": "Nucleotide sequence of the feature",
                    "dataType": "sequence",
                    "visible": false,
                    "copyable": true,
                    "categories": [
                        "sequence"
                    ],
                    "transform": {
                        "type": "sequence",
                        "options": {
                            "type": "dna",
                            "truncate": 50
                        }
                    }
                }
            ]
        },
        "Ontology_Dictionary": {
            "displayName": "Ontology Dictionary",
            "description": "Lookup table for GO Terms",
            "icon": "bi-book",
            "columns": [
                {
                    "column": "Term_ID",
                    "displayName": "Term ID",
                    "dataType": "string",
                    "width": "150px"
                },
                {
                    "column": "Term_Name",
                    "displayName": "Term Name",
                    "dataType": "string",
                    "width": "250px"
                }
            ]
        },
        "pan_genome_features": {
            "displayName": "Pangenome Features",
            "description": "Pangenome features clustering info",
            "icon": "bi-diagram-3",
            "settings": {
                "defaultSortColumn": "cluster_id",
                "defaultSortOrder": "asc"
            },
            "categories": [
                {
                    "id": "cluster",
                    "name": "Cluster Info",
                    "description": "Pangenome cluster assignments",
                    "icon": "bi-diagram-3-fill",
                    "color": "#8b5cf6",
                    "defaultVisible": true,
                    "order": 1
                },
                {
                    "id": "feature",
                    "name": "Feature Details",
                    "description": "Individual feature information",
                    "icon": "bi-info-circle-fill",
                    "color": "#06b6d4",
                    "defaultVisible": true,
                    "order": 2
                }
            ],
            "columns": [
                {
                    "column": "feature_id",
                    "displayName": "Feature ID",
                    "dataType": "id",
                    "copyable": true,
                    "sortable": true,
                    "filterable": true,
                    "width": "150px",
                    "pin": "left",
                    "categories": [
                        "feature"
                    ]
                },
                {
                    "column": "cluster_id",
                    "displayName": "Cluster ID",
                    "dataType": "string",
                    "copyable": true,
                    "sortable": true,
                    "filterable": true,
                    "width": "120px",
                    "categories": [
                        "cluster"
                    ],
                    "transform": {
                        "type": "badge",
                        "options": {
                            "color": "#8b5cf6",
                            "bgColor": "#f3e8ff"
                        }
                    }
                },
                {
                    "column": "is_core",
                    "displayName": "Core Gene",
                    "description": "Whether this gene is part of the core genome",
                    "dataType": "boolean",
                    "sortable": true,
                    "filterable": true,
                    "align": "center",
                    "width": "100px",
                    "categories": [
                        "cluster"
                    ],
                    "transform": {
                        "type": "boolean",
                        "options": {
                            "trueLabel": "Core",
                            "falseLabel": "Accessory",
                            "trueColor": "#22c55e",
                            "falseColor": "#94a3b8"
                        }
                    }
                },
                {
                    "column": "bakta_function",
                    "displayName": "Function",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "searchable": true,
                    "width": "300px",
                    "categories": [
                        "feature"
                    ]
                }
            ]
        },
        "genome_ani": {
            "displayName": "ANI Matrix",
            "description": "Average Nucleotide Identity pairwise comparisons",
            "icon": "bi-grid-3x3",
            "settings": {
                "defaultSortColumn": "ani",
                "defaultSortOrder": "desc"
            },
            "categories": [
                {
                    "id": "genomes",
                    "name": "Genome Pairs",
                    "description": "Compared genome identifiers",
                    "icon": "bi-arrow-left-right",
                    "color": "#6366f1",
                    "defaultVisible": true,
                    "order": 1
                },
                {
                    "id": "metrics",
                    "name": "ANI Metrics",
                    "description": "ANI values and alignment fractions",
                    "icon": "bi-percent",
                    "color": "#22c55e",
                    "defaultVisible": true,
                    "order": 2
                }
            ],
            "columns": [
                {
                    "column": "genome1",
                    "displayName": "Genome 1",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "width": "150px",
                    "categories": [
                        "genomes"
                    ]
                },
                {
                    "column": "genome2",
                    "displayName": "Genome 2",
                    "dataType": "string",
                    "sortable": true,
                    "filterable": true,
                    "width": "150px",
                    "categories": [
                        "genomes"
                    ]
                },
                {
                    "column": "ani",
                    "displayName": "ANI (%)",
                    "description": "Average Nucleotide Identity percentage",
                    "dataType": "percentage",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "categories": [
                        "metrics"
                    ],
                    "transform": {
                        "type": "heatmap",
                        "options": {
                            "min": 0.9,
                            "max": 1.0,
                            "showValue": true,
                            "decimals": 2,
                            "valueFormat": "percentage"
                        }
                    }
                },
                {
                    "column": "af1",
                    "displayName": "AF (G1→G2)",
                    "description": "Alignment fraction from Genome 1 to Genome 2",
                    "dataType": "float",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "categories": [
                        "metrics"
                    ],
                    "transform": {
                        "type": "heatmap",
                        "options": {
                            "decimals": 1
                        }
                    }
                },
                {
                    "column": "af2",
                    "displayName": "AF (G2→G1)",
                    "description": "Alignment fraction from Genome 2 to Genome 1",
                    "dataType": "float",
                    "sortable": true,
                    "filterable": true,
                    "align": "right",
                    "width": "100px",
                    "categories": [
                        "metrics"
                    ],
                    "transform": {
                        "type": "percentage",
                        "options": {
                            "decimals": 1
                        }
                    }
                }
            ]
        }
    }
}