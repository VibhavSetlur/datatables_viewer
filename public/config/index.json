{
    "app": {
        "name": "DataTables Viewer",
        "version": "3.1.0",
        "description": "Production-grade configurable data table renderer for research applications",
        "environment": "local"
    },
    "apis": {
        "default": {
            "id": "default",
            "name": "Local TableScanner",
            "url": "http://127.0.0.1:8000",
            "type": "rest"
        },
        "local": {
            "id": "local",
            "name": "Local TableScanner",
            "url": "http://127.0.0.1:8000",
            "type": "rest"
        },
        "prod": {
            "id": "prod",
            "name": "KBase Narrative API",
            "url": "https://kbase.us/services",
            "type": "rest"
        },
        "appdev": {
            "id": "appdev",
            "name": "KBase AppDev",
            "url": "https://appdev.kbase.us/services/berdl_table_scanner",
            "type": "rest"
        },
        "test_data": {
            "id": "test_data",
            "name": "Test Data (Local)",
            "url": "/config/test-data.json",
            "type": "json_server"
        }
    },
    "dataTypes": {
        "genome_data_tables": {
            "configUrl": "/config/genome-data-tables.json",
            "matches": [
                "KBaseFBA.GenomeDataLakeTables-*",
                "KBase.GenomeDataTables-*"
            ],
            "priority": 1,
            "autoLoad": true,
            "schemaMatch": {
                "enabled": true,
                "requiredTables": [
                    "Genes"
                ],
                "requiredColumns": {
                    "Genes": [
                        "ID",
                        "Database_ID"
                    ]
                },
                "minMatchScore": 0.7
            }
        },
        "test_data": {
            "configUrl": "/config/test-data.json",
            "matches": [
                "test_data",
                "test/test/test"
            ],
            "priority": 10,
            "autoLoad": true
        },
        "berdl_tables": {
            "configUrl": "/config/berdl-tables.json",
            "matches": [
                "berdl_tables",
                "local/berdl_tables",
                "test/test/1",
                "berdl/*"
            ],
            "priority": 5,
            "autoLoad": true,
            "schemaMatch": {
                "enabled": true,
                "requiredTables": [
                    "genome",
                    "contigs"
                ],
                "requiredColumns": {
                    "genome": [
                        "genome_id",
                        "genome_name"
                    ],
                    "contigs": [
                        "contig_id",
                        "genome_id"
                    ]
                },
                "minMatchScore": 0.6
            }
        },
        "metabolic_models": {
            "matches": [
                "KBaseFBA.FBAModel-*"
            ],
            "priority": 2,
            "autoLoad": false,
            "schemaMatch": {
                "enabled": true,
                "requiredTables": [
                    "Model"
                ],
                "requiredColumns": {
                    "Model": [
                        "id",
                        "name"
                    ]
                },
                "minMatchScore": 0.7
            }
        }
    },
    "defaultConfig": {
        "configUrl": "/config/default-config.json",
        "description": "Fallback configuration for unmapped databases"
    },
    "defaults": {
        "pageSize": 50,
        "theme": "system",
        "density": "normal",
        "showRowNumbers": true,
        "locale": "en-US",
        "dateFormat": "YYYY-MM-DD",
        "numberFormat": {
            "decimals": 2,
            "thousandsSeparator": ",",
            "decimalSeparator": "."
        }
    },
    "features": {
        "remoteConfig": false,
        "schemaExplorer": true,
        "columnSearch": true,
        "exportFormats": [
            "csv",
            "json",
            "tsv"
        ],
        "cellExpansion": true,
        "rowSelection": true,
        "keyboardNavigation": true,
        "contextMenu": false,
        "columnReordering": false,
        "columnResizing": true
    },
    "plugins": []
}