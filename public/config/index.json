{
    "app": {
        "name": "DataTables Viewer",
        "version": "3.1.0",
        "description": "Production-grade configurable data table renderer for research applications",
        "environment": "local"
    },
    "apis": {
        "default": {
            "id": "default",
            "name": "Local Server",
            "url": "http://127.0.0.1:8000",
            "type": "rest"
        },
        "prod": {
            "id": "prod",
            "name": "KBase Narrative API",
            "url": "https://kbase.us/services",
            "type": "rest"
        },
        "appdev": {
            "id": "appdev",
            "name": "KBase AppDev",
            "url": "https://appdev.kbase.us/services",
            "type": "rest"
        },
        "test_data": {
            "id": "test_data",
            "name": "Test Data (Local)",
            "url": "/config/test-data.json",
            "type": "json_server"
        }
    },
    "dataTypes": {
        "genome_data_tables": {
            "configUrl": "/config/genome-data-tables.json",
            "matches": [
                "KBaseFBA.GenomeDataLakeTables-*",
                "KBase.GenomeDataTables-*"
            ],
            "priority": 1,
            "autoLoad": true
        },
        "test_data": {
            "configUrl": "/config/test-data.json",
            "matches": [
                "test_data",
                "test/test/test"
            ],
            "priority": 10,
            "autoLoad": true
        },
        "berdl_tables": {
            "configUrl": "/config/berdl-tables.json",
            "matches": [
                "berdl_tables",
                "test/test/1",
                "berdl/*"
            ],
            "priority": 5,
            "autoLoad": true
        },
        "metabolic_models": {
            "matches": [
                "KBaseFBA.FBAModel-*"
            ],
            "priority": 2,
            "autoLoad": false
        }
    },
    "configApi": {
        "enabled": true,
        "baseUrl": "http://127.0.0.1:8000",
        "timeout": 10000,
        "cacheEnabled": true,
        "cacheTTL": 300000,
        "fallbackToStatic": true
    },
    "defaults": {
        "pageSize": 50,
        "theme": "system",
        "density": "normal",
        "showRowNumbers": true,
        "locale": "en-US",
        "dateFormat": "YYYY-MM-DD",
        "numberFormat": {
            "decimals": 2,
            "thousandsSeparator": ",",
            "decimalSeparator": "."
        }
    },
    "features": {
        "remoteConfig": true,
        "schemaExplorer": true,
        "columnSearch": true,
        "exportFormats": [
            "csv",
            "json",
            "tsv"
        ],
        "cellExpansion": true,
        "rowSelection": true,
        "keyboardNavigation": true,
        "contextMenu": false,
        "columnReordering": false,
        "columnResizing": true
    },
    "plugins": []
}